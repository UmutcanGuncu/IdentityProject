@model ResetPasswordViewModel
@{
    ViewData["Title"] = "Şifre Yenileme";
}
@section Scripts{

    @await Html.PartialAsync("_ValidationScriptsPartial")
}


<div class="container">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div asp-validation-summary="ModelOnly" class="alert alert-info" role="alert">

            </div>
            <h3>Şifre Yenileme</h3>
            <form method="post">
                
                <div class="mb-3">
                    <label for="exampleFormControlInput1" class="form-label">Şifre</label>
                    <input type="password" class="form-control" id="exampleFormControlInput1" asp-for="Password">
                    <span asp-validation-for="Password" style="color:red;"></span>
                </div>
                <div class="mb-3">
                    <label for="exampleFormControlInput1" class="form-label">Şifre</label>
                    <input type="password" class="form-control" id="exampleFormControlInput1" asp-for="ConfirmPassword">
                    <span asp-validation-for="ConfirmPassword" style="color:red;"></span>
                    <input type="hidden" asp-for="Token" />
                    <input type="hidden" asp-for="UserId" />
                </div>
                <button class="btn btn-outline-primary">Şifreyi Güncelle</button>
            </form>
        </div>
    </div>
</div>
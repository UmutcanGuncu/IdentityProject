@model SignInViewModel
@{
    ViewData["Title"] = "Giriş Yap";
}
@section Scripts{

    @await Html.PartialAsync("_ValidationScriptsPartial")
}
<div class="container">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div asp-validation-summary="ModelOnly" class="alert alert-info" role="alert">

            </div>
            <h3>Giriş Yapma Sayfası</h3>
            <form method="post">
                <div class="mb-3">
                    <label for="exampleFormControlInput1" class="form-label">E Posta Adresi</label>
                    <input type="email" class="form-control" id="exampleFormControlInput1" asp-for="Email">
                    <span asp-validation-for="Email" style="color:red;"></span>
                </div>

                <div class="mb-3">
                    <label for="exampleFormControlInput1" class="form-label">Şifre</label>
                    <input type="password" class="form-control" id="exampleFormControlInput1" asp-for="Password">
                    <span asp-validation-for="Password" style="color:red;"></span>
                </div>
                <div class="mb-3">
                    <label class="form-label">Beni Hatırla</label>
                    <input asp-for="RememberMe" />
                </div>

                <button class="btn btn-outline-primary">Giriş Yap</button>
            </form>
        </div>
    </div>
</div>
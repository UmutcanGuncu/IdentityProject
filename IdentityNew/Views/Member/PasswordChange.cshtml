@model PasswordChangeViewModel
@{
    ViewData["Title"] = "Şifre Güncelle";
}
@section Scripts{

    @await Html.PartialAsync("_ValidationScriptsPartial")
}
<div class="container">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div asp-validation-summary="ModelOnly" class="alert alert-info" role="alert">

            </div>
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-info" role="alert">
                    @TempData["Success"]
                </div>
                    }


                </div>
                <h3>Şifre Güncelleme Sayfası</h3>
                <form method="post">
                    <div class="mb-3">
                        <label for="exampleFormControlInput1" class="form-label">Eski Şifre</label>
                        <input type="password" class="form-control" id="exampleFormControlInput1" asp-for="OldPassword">
                        <span asp-validation-for="OldPassword" style="color:red;"></span>
                    </div>
                    <div class="mb-3">
                        <label for="exampleFormControlInput1" class="form-label">Yeni Şifre</label>
                        <input type="password" class="form-control" id="exampleFormControlInput1" asp-for="NewPassword">
                        <span asp-validation-for="NewPassword" style="color:red;"></span>
                    </div>
                    <div class="mb-3">
                        <label for="exampleFormControlInput1" class="form-label">Şifre Tekrarı</label>
                        <input type="password" class="form-control" id="exampleFormControlInput1" asp-for="ConfirmPassword">
                        <span asp-validation-for="ConfirmPassword" style="color:red;"></span>
                    </div>
                    <button class="btn btn-outline-primary">Kayıt Ol</button>
                </form>
            </div>
    </div>
</div>
@model List<AdminModel.RoleViewModel>
@{
    ViewData["Title"] = "Rol Sayfası";
}

<a href="/Admin/Roles/CreateRole" class="btn btn-outline-primary">Rol Ekle</a>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Rol İsmi</th>
            <th>Güncelle</th>
            <th>Sil</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td> <a href="/Admin/Roles/UpdateRole/@item.Id" class="btn btn-outline-primary">Güncelle</a> </td>
                <td> <a href="/Admin/Roles/DeleteRole/@item.Id" class="btn btn-outline-danger">Sil</a> </td>
            </tr>
        }
    </tbody>
</table>